<%= simple_form_for(@reviews) do |f| %>
  <% if @reviews.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @reviews.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
